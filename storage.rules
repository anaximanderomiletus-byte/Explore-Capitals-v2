rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // =============================================
    // USER AVATARS / UPLOADS
    // =============================================
    // Users can only upload to their own directory
    // Files must be images and under 5MB
    match /users/{userId}/{allPaths=**} {
      // Anyone can read user avatars (profile pictures are public)
      allow read: if true;

      // Only the authenticated owner can write
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');

      // Only the authenticated owner can delete their files
      allow delete: if request.auth != null
        && request.auth.uid == userId;
    }

    // =============================================
    // DENY EVERYTHING ELSE
    // =============================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
